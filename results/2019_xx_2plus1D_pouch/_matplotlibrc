# Set a 2/1 aspect ratio with automatic layout.
figure.figsize: 6, 3.75

# Use LaTeX fonts
font.family: serif
font.serif: ComputerModern
text.usetex: true

# Backend options (42: use TrueType fonts)
pdf.fonttype: 42
ps.fonttype: 42

# Set font sizes
font.size: 8
axes.labelsize: 11
axes.titlesize: 11
xtick.labelsize: 8
ytick.labelsize: 8
legend.fontsize: 8

# Set lines and ticks according to the `seaborn-paper` style sheet
grid.linewidth: 0.8
lines.linewidth: 1.4
patch.linewidth: 0.24
lines.markersize: 5.6
lines.markeredgewidth: 0
